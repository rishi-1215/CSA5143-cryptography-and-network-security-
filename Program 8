#include <stdio.h>
#include <string.h>
#include <ctype.h>

void generateCipher(char *keyword, char *cipher) {
    int i, j, len;
    char temp[26];
    len = strlen(keyword);

    
    strcpy(temp, keyword);
    for (i = len, j = 0; i < 26; i++) {
        char letter = 'A' + j;
        if (strchr(keyword, letter) == NULL) {
            temp[i] = letter;
            j++;
        }
    }

    
    for (i = 0; i < 26; i++) {
        cipher[i] = toupper(temp[i]);
    }
}

char* encrypt(char *plaintext, char *cipher) {
    int i;
    for (i = 0; plaintext[i] != '\0'; i++) {
        if (isalpha(plaintext[i])) {
            if (islower(plaintext[i])) {
                plaintext[i] = tolower(cipher[plaintext[i] - 'a']);
            } else {
                plaintext[i] = cipher[plaintext[i] - 'A'];
            }
        }
    }
    return plaintext;
}

int main() {
    char keyword[] = "CIPHER";
    char cipher[26];
    char plaintext[100];

    generateCipher(keyword, cipher);

    printf("Enter plaintext: ");
    fgets(plaintext, sizeof(plaintext), stdin);

    printf("Encrypted text: %s\n", encrypt(plaintext, cipher));

    return 0;
}
